@{
    ViewBag.Title = "Contact Us - Your Hairdresser";
}

@section Styles {
    <link rel="stylesheet" href="~/Content/css/contact.css">
}

<main>
    <!-- Contact Header -->
    <section class="contact-header">
        <div class="text-content">
            <h1>Contact Us</h1>
        </div>
    </section>

    <!-- Contact Information Section -->
    <section class="contact">
        <div class="contact-container">
            <div class="left-column">
                <div class="contact-info">
                    <h2>Contact Information</h2>
                    <p><strong>Address:</strong> Style Center, Hair Street No: 99, HairCity</p>
                    <p><strong>Phone:</strong> +1 123 456 7890</p>
                    <p><strong>Email:</strong> info@yourhairdresser.com</p>
                </div>
                <div class="follow-us">
                    <h2>Follow Us</h2>
                    <div class="social-icons">
                        <a href="#"><i class="fa-brands fa-facebook"></i></a>
                        <a href="#"><i class="fa-brands fa-instagram"></i></a>
                        <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    </div>
                </div>
            </div>
            <div class="right-column">
                <div class="form">
                    <h2>Get in Touch</h2>
                    <form action="#" method="post">
                        <label for="name">Your Name</label>
                        <input type="text" id="name" placeholder="Your Name" required>
                        <label for="email">Your Email</label>
                        <input type="email" id="email" placeholder="Your Email" required>
                        <label for="message">Your Message</label>
                        <textarea id="message" placeholder="Your Message" required></textarea>
                        <button type="submit" class="btn">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>
