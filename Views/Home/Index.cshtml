@using E_SHOPPING_WEB_SITE.Entity
@model IEnumerable<Product>

@{
    ViewBag.Title = "Home";
}

@section Styles {
    <link rel="stylesheet" href="~/Content/css/home.css">
}

<!-- Home Section -->
<section class="home">
    <div class="content">
        <h3>Your Hairdresser Supplies Needs Are Here</h3>
        <p>Are you a hairdresser? Do you want to improve yourself at home? Are you a course that wants to provide employment? The materials you are looking for are here.</p>
        <a href="#" class="btn">Order Now</a>
    </div>
</section>

<!-- Categories Section -->
<section class="categories">
    <h1 class="heading">Our <span>Categories</span></h1>
    <div class="box-container">

        <div class="box">
            <div class="box-head">
                <img src="~/Content/images/haircaree.jfif" alt="Hair Care">
                <h3>Hair Care</h3>
            </div>
            <div class="box-bottom">
                <a href="#" class="btn">Check Out</a>
            </div>
        </div>
        <div class="box">
            <div class="box-head">
                <img src="~/Content/images/duzz.png" alt="Straighteners">
                <h3>Curling Irons and Straighteners</h3>
            </div>
            <div class="box-bottom">
                <a href="#" class="btn">Check Out</a>
            </div>
        </div>
        <div class="box">
            <div class="box-head">
                <img src="~/Content/images/brush.png" alt="Brushes">
                <h3>Brushes</h3>
            </div>
            <div class="box-bottom">
                <a href="#" class="btn">Check Out</a>
            </div>
        </div>
        <div class="box">
            <div class="box-head">
                <img src="~/Content/images/colors.jfif" alt="Hair Dyes">
                <h3>Box Dyes</h3>
            </div>
            <div class="box-bottom">
                <a href="#" class="btn">Check Out</a>
            </div>
        </div>
    </div>
</section>

<!-- Highlights Section -->
<section class="highlights">
    <h1 class="heading">Our <span>Products</span></h1>
    <div class="box-container">


        @foreach (var item in Model)
        {
            <div class="box">
                <div class="box-head">
                    <img src="~/Content/images/sac_kurutma_2.jpeg" alt="@item.Name">
                    <span class="highlights-category">Electric Tools</span>

                    <h3>
                        <a href="@Url.Action("Details", "Home", new { id = item.Id })">@item.Name</a>
                    </h3>
                    <p class="box-text">@item.Description</p>
                    <div class="price">$@item.Price <span>119.99</span></div>
                </div>
                <div class="box-bottom">
                    <a href="#" class="btn">Add to Cart</a>
                </div>
            </div>

        }



        
    </div>
</section>
